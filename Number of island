#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

void change(int r,int c,int i,int j,int a[r][c])
{
    if(i<0||j<0||i==r||j==c||a[i][j]==0)
        return;
    a[i][j]=0;
    change(r,c,i-1,j,a);
    change(r,c,i+1,j,a);
    change(r,c,i,j-1,a);
    change(r,c,i,j+1,a);
}
int main() {
    int r,c;
    scanf("%d%d",&r,&c);
    int a[r][c];
    for(int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            scanf("%d",&a[i][j]);
        }
    }
    int ct=0;
    for(int i=0;i<r;i++)
    {
        for(int j=0;j<c;j++)
        {
            if(a[i][j]==1)
            {
                ct++;
                change(r,c,i,j,a);
            }
        }
    }
    printf("%d",ct);
    return 0;
}
